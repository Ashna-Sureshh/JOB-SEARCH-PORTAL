@model JOBSEARCHPORTAL.Models.Application

@{
    ViewBag.Title = "Apply for Job";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Apply for Job: @ViewBag.JobTitle</h1>

<div>
    <h3>Job Description:</h3>
    <p>@ViewBag.JobDescription</p>

    <h3>Upload your Resume:</h3>
    @using (Html.BeginForm("ApplyNow", "Applyjob", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="Resume">Resume (PDF, DOC, DOCX):</label>
            <input type="file" name="file" class="form-control" accept=".pdf,.doc,.docx" required />
        </div>

        <div class="form-group">
            <input type="submit" value="Apply Now" class="btn btn-success" />
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
<div class="alert alert-success">
    @TempData["SuccessMessage"]
</div>}
</div>

<div style="margin-top: 20px;">
    @Html.ActionLink("Back to Job Search", "JobSearch_Pageload", "JobSearchCon", null, new { @class = "btn btn-primary" })
</div>
